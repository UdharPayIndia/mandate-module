<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.kyc.presentation.ui.kyc.viewmodel.ItemKycCompletedVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rp_size_8"
        android:orientation="horizontal"
        android:padding="@dimen/rp_size_8"
        android:clickable="@{!vm.isSelected()}"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> vm.onExpandClick()}"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTitle"
            android:textAppearance="@style/rp_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@{vm.titleText}"
            android:layout_marginEnd="@dimen/rp_size_16"
            tools:text="1. Settlement bank details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/barrierStart"/>

        <TextView
            android:id="@+id/tvSubTitle"
            android:textAppearance="@style/rp_body_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@{vm.subTitleText}"
            android:layout_marginEnd="@dimen/rp_size_16"
            tools:text="Please ensure you enter your correct PAN"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/barrierStart"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ivIllustration, ivExpand"
            app:barrierDirection="start"/>

        <ImageView
            android:id="@+id/ivIllustration"
            android:layout_width="@dimen/rp_size_64"
            android:layout_height="@dimen/rp_size_64"
            android:layout_marginBottom="@dimen/rp_size_6"
            android:layout_marginTop="@dimen/rp_size_6"
            android:layout_marginStart="@dimen/rp_size_6"
            android:layout_marginEnd="@dimen/rp_size_4"
            android:layout_gravity="center"
            android:src="@{vm.illustrationDrawable}"
            tools:src="@drawable/rp_ic_edit"
            android:visibility="@{vm.isSelected() ? View.VISIBLE : View.GONE}"
            android:background="@drawable/rp_ic_circle"
            android:backgroundTint="@color/rp_blue_5"
            android:padding="@dimen/rp_size_12"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivExpand"
            android:layout_width="@dimen/rp_size_24"
            android:layout_height="@dimen/rp_size_24"
            android:layout_marginBottom="@dimen/rp_size_6"
            android:layout_marginTop="@dimen/rp_size_6"
            android:visibility="@{vm.isSelected() ? View.GONE : View.VISIBLE}"
            android:layout_marginStart="@dimen/rp_size_6"
            android:layout_marginEnd="@dimen/rp_size_12"
            android:layout_gravity="center"
            android:src="@drawable/rp_ic_chevron_down"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
