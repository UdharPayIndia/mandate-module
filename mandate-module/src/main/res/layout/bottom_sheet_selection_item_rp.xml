<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.rocketpay.mandate.common.basemodule.common.presentation.bottomsheetselection.DialogBottomSheetSelectionItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/rp_size_16"
        android:gravity="center"
        android:onClick="@{() -> vm.onItemClick()}"
        android:background="?attr/selectableItemBackground"
        tools:ignore="HardcodedText,UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/rp_size_24"
            android:layout_height="@dimen/rp_size_24"
            android:src="@{vm.selectedDrawable}"
            app:tint="@color/rp_blue_2"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="@style/rp_cta_regular"
            android:layout_marginStart="@dimen/rp_size_16"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@{vm.prefix}"
            android:textColor="@color/rp_grey_1"
            tools:text="Udhar Pay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/rp_body_small"
            android:layout_marginStart="@dimen/rp_size_16"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@{vm.suffix}"
            android:textColor="@color/rp_grey_1"
            tools:text="Udhar Pay" />

    </LinearLayout>

</layout>
