<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.mandate.presentation.ui.mandateadd.viewmodel.MandateAddUM" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{vm.isPersonalDetailExpanded ? View.VISIBLE : View.GONE}">

            <LinearLayout
                style="@style/rp_surface_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rp_size_4"
                android:orientation="vertical"
                android:padding="@dimen/rp_size_16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/rp_how_much_money_you_want_to_collect"
                    android:textAppearance="@style/rp_body_regular_medium"
                    android:textColor="@color/rp_grey_1" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/RpMyTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rp_size_6"
                    android:layout_marginBottom="@dimen/rp_size_20"
                    android:hint="@string/rp_total_amount"
                    app:errorIconDrawable="@null"
                    app:errorText="@{vm.amountError}">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_amount"
                        style="@style/RpMyCompactEditText"
                        android:layout_width="match_parent"
                        android:drawableStart="@drawable/rp_ic_rupee_icon"
                        android:drawablePadding="@dimen/rp_size_8"
                        android:drawableTint="@android:color/black"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:onFocusChange="@{(v, hasFocus) -> vm.onAmountFocusChanged(hasFocus)}"
                        android:onTextChanged="@{(text,a,b,c) -> vm.onAmountChanged(text)}"
                        android:text="@{vm.amount}" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/rp_who_do_you_want_to_collect_it_from"
                    android:textAppearance="@style/rp_body_regular_medium"
                    android:textColor="@color/rp_grey_1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_mobile"
                    style="@style/RpMyTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rp_size_6"
                    android:hint="@string/rp_customer_mobile_number"
                    app:endIconDrawable="@drawable/rp_ic_contact"
                    app:endIconMode="custom"
                    app:endIconTint="@color/rp_blue_2"
                    app:errorIconDrawable="@null"
                    app:errorText="@{vm.numberError}">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/RpMyCompactEditText"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:maxLength="13"
                        android:onFocusChange="@{(v, hasFocus) -> vm.onNumberFocusChanged(hasFocus)}"
                        android:onTextChanged="@{(text,a,b,c) -> vm.onCustomerNumberChanged(text)}"
                        android:text="@{vm.number}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/RpMyTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rp_size_8"
                    android:layout_marginBottom="@dimen/rp_size_20"
                    android:hint="@string/rp_customer_name"
                    app:errorIconDrawable="@null"
                    app:errorText="@{vm.nameError}">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/RpMyCompactEditText"
                        android:layout_width="match_parent"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:onFocusChange="@{(v, hasFocus) -> vm.onNameFocusChanged(hasFocus)}"
                        android:onTextChanged="@{(text,a,b,c) -> vm.onCustomerNameChanged(text)}"
                        android:text="@{vm.name}" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/rp_what_is_this_collection_for"
                    android:textAppearance="@style/rp_body_regular_medium"
                    android:textColor="@color/rp_grey_1" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/RpMyTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rp_size_6"
                    android:hint="@string/rp_order_note"
                    app:errorIconDrawable="@null"
                    app:errorText="@{vm.noteError}">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/RpMyCompactEditText"
                        android:layout_width="match_parent"
                        android:inputType="textCapSentences|textNoSuggestions"
                        android:onFocusChange="@{(v, hasFocus) -> vm.onNoteFocusChanged(hasFocus)}"
                        android:onTextChanged="@{(text,a,b,c) -> vm.onOrderDescriptionChanged(text)}"
                        android:text="@{vm.note}" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/rp_surface_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rp_size_4"
            android:clickable="@{!vm.isPersonalDetailExpanded &amp;&amp; vm.isPersonalEditEnabled}"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> vm.onEditPersonalDetails()}"
            android:padding="@dimen/rp_size_16"
            android:visibility="@{vm.isPersonalDetailExpanded ? View.GONE : View.VISIBLE}"
            tools:visibility="gone">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/rp_size_16"
                android:layout_weight="1"
                android:text="@{vm.personalTitleText}"
                android:textAppearance="@style/rp_title"
                app:layout_constraintEnd_toStartOf="@+id/iv_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="1. Settlement bank details" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/rp_size_16"
                android:layout_weight="1"
                android:textAppearance="@style/rp_body_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:textWithEmptyCheck="@{vm.personalSubTitleText}"
                tools:text="Please ensure you enter your correct PAN" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/rp_size_32"
                android:layout_height="@dimen/rp_size_32"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/rp_size_6"
                android:layout_marginEnd="@dimen/rp_size_12"
                android:background="@drawable/rp_ic_circle"
                android:backgroundTint="@color/rp_blue_5"
                android:padding="@dimen/rp_size_6"
                android:src="@drawable/rp_ic_edit"
                android:visibility="@{vm.isPersonalEditEnabled ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title"
                app:tint="@color/rp_blue_2"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>
