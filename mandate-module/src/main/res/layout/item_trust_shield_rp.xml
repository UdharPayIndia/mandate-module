<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:textAppearance="@style/rp_body_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/rp_your_data_is_100_safe_with_us" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/rp_size_4"
        android:layout_margin="@dimen/rp_size_8"
        app:cardElevation="@dimen/rp_size_1">

        <ImageView
            android:id="@+id/iv_call_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/rp_ic_trust_shield"
            tools:ignore="ContentDescription"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
