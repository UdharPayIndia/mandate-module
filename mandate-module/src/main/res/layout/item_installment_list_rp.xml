<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.installment.presentation.ui.paymentSchedule.list.viewmodel.ItemInstallmentListVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/rp_size_16"
        android:orientation="horizontal"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/rp_grey_6"
        android:onClick="@{() -> vm.onItemClick()}">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="@{vm.headerTitle}"
            android:url="@{vm.headerUrl}"
            tools:tint="@color/rp_green_2"
            app:layout_constraintVertical_bias="0.4"
            tools:ignore="ContentDescription"
            tools:src="@drawable/rp_ic_profile_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/lyt_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rp_size_16"
            android:layout_marginEnd="@dimen/rp_size_16"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/iv_logo"
            app:layout_constraintEnd_toStartOf="@+id/lyt_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lyt_tag">

            <TextView
                android:textAppearance="@style/rp_body_regular_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{vm.bodyTitle}"
                tools:text="Rahulkumar" />

            <TextView
                android:layout_marginTop="@dimen/rp_size_4"
                android:textAppearance="@style/rp_body_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.bodySubtitle}"
                tools:text="1000 due in 13 days" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/lyt_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rp_size_8"
            android:visibility="@{vm.showTag ? View.VISIBLE : View.GONE}"
            android:layout_marginStart="@dimen/rp_size_16"
            app:layout_constraintStart_toEndOf="@+id/iv_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyt_customer"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> vm.onItemClick()}">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/rp_size_4"
                    android:layout_marginEnd="@dimen/rp_size_8"
                    android:visibility="@{vm.showSuperKeyTag ?  View.VISIBLE : View.GONE}"
                    android:background="@drawable/rp_background_card_24"
                    android:backgroundTint="@color/rp_green_5">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/rp_ic_super_key_small" />

                    <TextView
                        android:textAppearance="@style/rp_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:visibility="@{vm.showTagIconsOnly ? View.GONE : View.VISIBLE}"
                        android:layout_marginHorizontal="@dimen/rp_size_4"
                        android:gravity="center_vertical"
                        android:text="@string/rp_superkey"
                        android:textColor="@color/rp_green_1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/rp_size_8"
                    android:background="@drawable/rp_background_card_24"
                    android:backgroundTint="@color/rp_blue_5"
                    android:padding="@dimen/rp_size_4"
                    android:visibility="@{vm.showMandateTag ?  View.VISIBLE : View.GONE}">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/rp_ic_rocket_pay_small"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/rp_size_4"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/rp_mandate"
                        android:textAppearance="@style/rp_header"
                        android:textColor="@color/rp_blue_2"
                        android:visibility="@{vm.showTagIconsOnly ? View.GONE : View.VISIBLE}" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/rp_size_4"
                    android:layout_marginEnd="@dimen/rp_size_8"
                    android:visibility="@{vm.showAutoReminderTag ?  View.VISIBLE : View.GONE}"
                    android:background="@drawable/rp_background_card_24"
                    android:backgroundTint="@color/rp_orange_5">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/rp_ic_auto_reminder_icon_small" />

                    <TextView
                        android:textAppearance="@style/rp_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:visibility="@{vm.showTagIconsOnly ? View.GONE : View.VISIBLE}"
                        android:layout_marginHorizontal="@dimen/rp_size_4"
                        android:gravity="center_vertical"
                        android:text="@string/rp_auto_reminder"
                        android:textColor="@color/rp_orange_1" />

                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/lyt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                tools:src="@drawable/rp_ic_success"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/rp_size_2"
                android:tint="@{vm.footerTitleTextColor}"
                android:src="@{vm.footerDrawable}"
                tools:tint="@color/rp_grey_1"/>

            <TextView
                android:textAppearance="@style/rp_num_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.footerTitle}"
                android:textColor="@{vm.footerTitleTextColor}"
                tools:text="â‚¹50,000" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
