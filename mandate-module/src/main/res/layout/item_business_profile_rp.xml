<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.business.presentation.ui.viewmodel.ItemBusinessProfileVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/rp_size_8"
        android:elevation="@dimen/rp_size_2"
        tools:ignore="HardcodedText,UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginBottom="@dimen/rp_size_4"
            app:textWithEmptyCheck="@{vm.title}"
            android:textAppearance="@style/rp_body_small"
            android:textColor="@color/rp_blue_2"
            tools:text="@string/rp_no_of_installments" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/rp_background_card_cta"
            android:onClick="@{() -> vm.onItemClick()}"
            android:orientation="horizontal"
            android:padding="@dimen/rp_size_16"
            android:visibility="@{vm.textInputLayoutVisibility == View.VISIBLE ? View.GONE : View.VISIBLE}">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@{vm.subtitle}"
                android:textAppearance="@style/rp_cta_regular"
                android:textColor="@color/rp_blue_2"
                tools:text="@string/rp_no_of_installments" />

            <ImageView
                android:layout_width="@dimen/rp_size_12"
                android:layout_height="@dimen/rp_size_12"
                android:layout_marginStart="@dimen/rp_size_8"
                android:src="@drawable/rp_ic_forward"
                android:rotation="90"
                app:tint="@color/rp_blue_2"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/RpMyTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{vm.textInputLayoutVisibility}"
            android:hint="@{vm.textHint}"
            app:errorIconDrawable="@null"
            app:errorText="@{vm.textError}">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_form_field"
                style="@style/RpMyEditText"
                android:layout_width="match_parent"
                android:inputType="text"
                android:text="@{vm.textValue}"
                android:onTextChanged="@{(text,a,b,c) -> vm.onTextChanged(text)}" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</layout>
