<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.mandate.presentation.ui.mandatelist.viewmodel.MandateListUM" />

        <import type="android.view.View" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rp_blue_6"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/lytScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rp_grey_6"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rp_grey_6"
                android:fitsSystemWindows="true"
                app:elevation="@dimen/rp_size_0"
                app:expanded="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:statusBarScrim="@color/rp_grey_6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/lytWallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <FrameLayout
                            android:id="@+id/lytSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{vm.mandateSummaryVisibility ? View.VISIBLE : View.GONE}" />

                    </LinearLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/rp_blue_6"
                        android:elevation="@dimen/rp_size_1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/rp_size_8"
                        android:visibility="@{vm.searchFilterSortLayoutVisibility}">

                        <LinearLayout
                            android:id="@+id/edit_text_search_container"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/rp_size_40"
                            android:layout_margin="@dimen/rp_size_8"
                            android:layout_weight="1"
                            android:animateLayoutChanges="true"
                            android:background="@drawable/rp_background_card_8"
                            android:backgroundTint="@color/rp_blue_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/rp_size_40"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:onClick="@{() -> vm.onSearchClick()}"
                                android:paddingStart="11dp"
                                android:paddingTop="11dp"
                                android:paddingBottom="11dp"
                                android:src="@drawable/rp_ic_search"
                                android:visibility="@{TextUtils.isEmpty(vm.searchKeyWord) ? View.GONE : View.VISIBLE}"
                                app:tint="@color/rp_blue_2"
                                tools:ignore="ContentDescription" />

                            <com.rocketpay.mandate.feature.mandate.presentation.ui.mandatelist.adapter.CustomEditTextWithBackPressEvent
                                android:id="@+id/queryET"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/rp_size_40"
                                android:layout_marginStart="11dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center|start"
                                android:hint="@string/rp_search_customer"
                                android:inputType="textVisiblePassword|textNoSuggestions"
                                android:onClick="@{() -> vm.onSearchClick()}"
                                android:onFocusChange="@{(v, hasFocus) -> vm.onSearchFocusChange(hasFocus)}"
                                android:onTextChanged="@{(text,a,b,c) -> vm.onSearchTextChanged(text)}"
                                android:text="@{vm.searchKeyWord}"
                                android:textAppearance="@style/rp_body_regular"
                                android:textColor="@color/rp_grey_1"
                                android:textColorHint="@color/rp_blue_2"
                                tools:ignore="RelativeOverlap" />

                            <ImageView
                                android:layout_width="@dimen/rp_size_40"
                                android:layout_height="@dimen/rp_size_40"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:onClick="@{() -> vm.onCloseClick()}"
                                android:padding="11dp"
                                android:src="@drawable/rp_ic_cross"
                                android:visibility="@{TextUtils.isEmpty(vm.searchKeyWord) ? View.GONE : View.VISIBLE}"
                                app:tint="@color/rp_blue_2"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/filter_dropdown"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/rp_size_40"
                            android:layout_marginStart="@dimen/rp_size_4"
                            android:layout_marginEnd="@dimen/rp_size_4"
                            android:background="@drawable/rp_background_card_8"
                            android:backgroundTint="@color/rp_blue_5"
                            android:gravity="center"
                            android:onClick="@{() -> vm.onFilterClick()}"
                            android:padding="@dimen/rp_size_8">

                            <TextView
                                style="@style/rp_body_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/rp_size_4"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/rp_filter"
                                android:textColor="@color/rp_blue_2"
                                tools:ignore="RelativeOverlap" />

                            <ImageView
                                android:layout_width="@dimen/rp_size_12"
                                android:layout_height="@dimen/rp_size_12"
                                android:layout_marginEnd="@dimen/rp_size_4"
                                android:src="@drawable/rp_ic_circle"
                                android:visibility="@{vm.filterVisibility}"
                                app:tint="@color/rp_red_2"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sort_dropdown"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/rp_size_40"
                            android:layout_margin="@dimen/rp_size_8"
                            android:background="@drawable/rp_background_card_8"
                            android:backgroundTint="@color/rp_blue_5"
                            android:gravity="center"
                            android:onClick="@{() -> vm.onSortClick()}"
                            android:padding="@dimen/rp_size_8">

                            <TextView
                                style="@style/rp_body_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/rp_size_4"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="@string/rp_sort"
                                android:textColor="@color/rp_blue_2"
                                tools:ignore="RelativeOverlap" />

                            <ImageView
                                android:layout_width="@dimen/rp_size_12"
                                android:layout_height="@dimen/rp_size_12"
                                android:layout_marginEnd="@dimen/rp_size_4"
                                android:src="@drawable/rp_ic_circle"
                                android:visibility="@{vm.sortVisibility}"
                                app:tint="@color/rp_red_2"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/rp_size_72"
                        android:visibility="@{vm.emptyStateVisibility == View.VISIBLE ? View.GONE : View.VISIBLE}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_mandate_list_rp" />

                    <LinearLayout
                        android:id="@+id/empty_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/rp_size_16"
                        android:visibility="@{vm.emptyStateVisibility}">

                        <ImageView
                            android:id="@+id/illustration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rp_illustration_no_result_found"
                            app:tint="@color/rp_blue_4"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/rp_size_8"
                            android:gravity="center"
                            android:text="@string/rp_illustration_description_no_result_found"
                            android:textAppearance="@style/rp_body_regular" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rp_size_16"
                android:gravity="center"
                android:text="@string/rp_illustration_description_onboarding"
                android:textAppearance="@style/rp_title"
                android:visibility="@{vm.downArrowVisibility}" />

            <ImageView
                android:layout_width="@dimen/rp_size_48"
                android:layout_height="@dimen/rp_size_48"
                android:layout_margin="@dimen/rp_size_16"
                android:src="@drawable/rp_ic_arrow"
                android:visibility="@{vm.downArrowVisibility}"
                app:shakeAnimation="@{true}"
                app:tint="@color/rp_blue_4"
                tools:ignore="ContentDescription" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/efb_add_customer"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rp_size_16"
                android:background="@drawable/rp_background_card_24"
                android:enabled="@{vm.isCreateMandateEnabled}"
                android:includeFontPadding="false"
                android:onClick="@{() -> vm.onAddMandateClick()}"
                android:text="@{vm.createMandateText}"
                android:textAppearance="@style/rp_cta_regular"
                android:textColor="@color/rp_grey_6"
                app:icon="@drawable/rp_ic_plus"
                app:iconTint="@color/rp_grey_6"
                tools:text="@string/rp_create_new_payment" />

        </LinearLayout>

    </FrameLayout>

</layout>
