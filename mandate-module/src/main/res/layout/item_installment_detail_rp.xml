<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.installment.presentation.ui.installmentdetail.viewmodel.ItemInstallmentDetailVM"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/rp_size_16"
        android:paddingEnd="@dimen/rp_size_16"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/rp_grey_6"
        android:onClick="@{() -> vm.onItemClick()}"
        android:clickable="@{vm.isFirstPosition}"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@{vm.topDotLineDrawable}"
                android:orientation="vertical"
                android:visibility="@{vm.topDotLineVisibility}"/>

            <ImageView
                android:layout_width="@dimen/rp_size_20"
                android:layout_height="@dimen/rp_size_20"
                android:src="@{vm.stateIcon}"
                tools:src="@drawable/rp_ic_success"
                tools:tint="@color/rp_blue_2"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@{vm.bottomDotLineDrawable}"
                android:orientation="vertical"
                android:visibility="@{vm.bottomDotLineVisibility}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rp_size_12"
            android:layout_marginBottom="@dimen/rp_size_12"
            android:layout_marginStart="@dimen/rp_size_16"
            android:layout_marginEnd="@dimen/rp_size_16"
            android:orientation="vertical">

            <TextView
                android:textAppearance="@style/rp_body_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.title}"
                android:textColor="@{vm.detailColor}"
                tools:text="Rahulkumar" />

            <TextView
                android:textAppearance="@style/rp_body_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.date}"
                tools:text="1000 due in 13 days" />

            <TextView
                android:textAppearance="@style/rp_body_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textWithNullCheck="@{vm.detail}"
                android:textColor="@color/rp_red_2"
                tools:text="Failed due to insufficient fund in customer's bank" />

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="@dimen/rp_size_6"
            android:layout_gravity="center_vertical"
            android:src="@drawable/rp_ic_forward"
            app:tint="@color/rp_grey_3"
            android:rotation="@{vm.rotation}"
            android:visibility="@{vm.forwardIconVisibility}"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</layout>
