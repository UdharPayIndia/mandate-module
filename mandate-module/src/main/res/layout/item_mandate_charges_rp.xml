<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.mandate.presentation.ui.mandateadd.viewmodel.MandateAddUM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rp_grey_6"
        android:paddingHorizontal="@dimen/rp_size_12"
        android:paddingTop="@dimen/rp_size_12"
        android:paddingBottom="@dimen/rp_size_4"
        android:visibility="@{vm.newChargeVisibility}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/tvCollectionTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rp_size_16"
            android:gravity="start"
            android:text="@string/rp_total_collection_amount"
            android:textAppearance="@style/rp_body_small"
            android:textColor="@color/rp_grey_3"
            app:layout_constraintEnd_toStartOf="@+id/tvCollectionTotal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <FrameLayout
            android:id="@+id/tvCollectionTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/collectionBarrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCollectionTotalLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_min="@dimen/rp_size_64">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{TextUtils.isEmpty(vm.collectionAmountText) ? View.VISIBLE : View.GONE}"
                app:showShimmer="@{TextUtils.isEmpty(vm.collectionAmountText)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/rp_grey_4"
                    android:gravity="end"
                    android:minWidth="@dimen/rp_size_80"
                    android:text="@{vm.collectionAmountText}"
                    android:textAppearance="@style/rp_body_small"
                    tools:text="@string/rp_business_info" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rp_grey_6"
                android:gravity="end"
                android:visibility="@{TextUtils.isEmpty(vm.collectionAmountText) ? View.GONE : View.VISIBLE}"
                android:minWidth="@dimen/rp_size_80"
                android:text="@{vm.collectionAmountText}"
                android:textAppearance="@style/rp_body_small"
                tools:text="@string/rp_business_info" />

        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/collectionBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvCollectionTotalLabel, tvCollectionTotal" />

        <TextView
            android:id="@+id/tvHandlingChargesLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rp_size_16"
            android:gravity="start"
            android:text="@{vm.handlingChargeLabel}"
            android:textAppearance="@style/rp_body_small"
            android:textColor="@color/rp_grey_3"
            android:layout_marginTop="@dimen/rp_size_8"
            app:layout_constraintTop_toBottomOf="@+id/collectionBarrier"
            app:layout_constraintBottom_toTopOf="@+id/chargesBarrier"
            app:layout_constraintEnd_toStartOf="@+id/tvHandlingCharges"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@string/rp_merchant_charges_per_installment_at_zero" />

        <FrameLayout
            android:id="@+id/tvHandlingCharges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvHandlingChargesLabel"
            app:layout_constraintTop_toTopOf="@+id/tvHandlingChargesLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvHandlingChargesLabel"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_min="@dimen/rp_size_64">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{TextUtils.isEmpty(vm.handlingChargeText) ?View.VISIBLE  :View.GONE}"
                app:showShimmer="@{TextUtils.isEmpty(vm.handlingChargeText)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/rp_grey_4"
                    android:gravity="end"
                    android:minWidth="@dimen/rp_size_80"
                    android:textAppearance="@style/rp_body_small"
                    tools:text="@string/rp_kyc_registration" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rp_grey_6"
                android:gravity="end"
                android:visibility="@{TextUtils.isEmpty(vm.handlingChargeText) ?View.GONE  :View.VISIBLE}"
                android:minWidth="@dimen/rp_size_80"
                android:text="@{vm.handlingChargeText}"
                android:textAppearance="@style/rp_body_small"
                tools:text="@string/rp_kyc_registration" />
        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/chargesBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvHandlingChargesLabel, tvHandlingCharges" />

        <View
            android:id="@+id/viewSeparator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/rp_size_8"
            android:background="@drawable/rp_divider_dotted_line_horizontal"
            android:backgroundTint="@color/rp_grey_4"
            app:layout_constraintTop_toBottomOf="@+id/chargesBarrier" />

        <TextView
            android:id="@+id/tvPerAmountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rp_size_16"
            android:gravity="start"
            android:text="@{vm.userCollectionPerInstallmentLabel}"
            android:textAppearance="@style/rp_body_regular_medium"
            app:layout_constraintEnd_toStartOf="@+id/tvPerAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPerAmount"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@string/rp_your_collection" />

        <FrameLayout
            android:id="@+id/tvPerAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rp_size_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPerAmountLabel"
            app:layout_constraintTop_toBottomOf="@+id/viewSeparator"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_min="@dimen/rp_size_64">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{TextUtils.isEmpty(vm.userCollectionPerInstallmentText) ? View.VISIBLE: View.GONE}"
                app:showShimmer="@{TextUtils.isEmpty(vm.userCollectionPerInstallmentText)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/rp_grey_4"
                    android:gravity="end"
                    android:minWidth="@dimen/rp_size_80"
                    android:textAppearance="@style/rp_body_regular_medium"
                    tools:text="@string/rp_kyc_registration" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rp_grey_6"
                android:gravity="end"
                android:visibility="@{TextUtils.isEmpty(vm.userCollectionPerInstallmentText) ? View.GONE: View.VISIBLE}"
                android:minWidth="@dimen/rp_size_80"
                android:text="@{vm.userCollectionPerInstallmentText}"
                android:textAppearance="@style/rp_body_regular_medium"
                tools:text="@string/rp_kyc_registration" />
        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/perBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvPerAmountLabel, tvPerAmount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rp_size_8"
            android:background="@color/rp_blue_5"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> vm.onBearerCheckBoxClicked()}"
            android:orientation="horizontal"
            android:padding="@dimen/rp_size_10"
            android:visibility="@{vm.chargerControlVisibility ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/perBarrier">

            <TextView
                android:id="@+id/tvPanLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/rp_size_16"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/rp_pass_handling_charges_to_customer"
                android:textAppearance="@style/rp_body_small"
                android:textColor="@color/rp_grey_3" />

            <ImageView
                android:layout_width="@dimen/rp_size_16"
                android:layout_height="@dimen/rp_size_16"
                android:src="@{vm.bearerCheckBox}"
                tools:src="@drawable/rp_ic_checkbox_empty" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
