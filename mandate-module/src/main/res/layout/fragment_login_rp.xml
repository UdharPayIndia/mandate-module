<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.login.presentation.ui.login.viewmodel.LoginUM" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rp_grey_6">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="@{vm.mobileNumberVisibility}"
                    android:padding="@dimen/rp_size_16">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/rp_size_56"
                        android:layout_marginTop="@dimen/rp_size_6"
                        android:background="?attr/selectableItemBackground"
                        app:cardCornerRadius="4dp"
                        app:strokeColor="@color/rp_grey_4"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="@dimen/rp_size_24"
                                android:layout_height="@dimen/rp_size_24"
                                android:layout_marginStart="@dimen/rp_size_8"
                                android:layout_marginEnd="@dimen/rp_size_4"
                                android:gravity="center"
                                android:text="@string/rp_india_flag"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:textAppearance="@style/rp_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginEnd="@dimen/rp_size_8"
                                android:text="@{vm.countryCode}"
                                tools:text="+91" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/RpMyTextInput"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/rp_size_8"
                        android:hint="@string/rp_login_input_mobile"
                        app:errorIconDrawable="@null"
                        app:errorText="@{vm.mobileErrorMessage}">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_mobile_number"
                            style="@style/RpMyEditText"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:onTextChanged="@{(text,a,b,c) -> vm.updateMobileNumber(text)}"
                            android:onFocusChange="@{(v, hasFocus) -> vm.onMobileNumberFocusChanged(hasFocus)}"
                            android:text="@{vm.mobileNumber}" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/rp_size_16"
                    android:orientation="vertical"
                    android:visibility="@{vm.mobileNumberVisibility == View.VISIBLE ? View.GONE : View.VISIBLE}">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/RpMyTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_otp"
                            style="@style/RpMyEditText"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:hint="@string/rp_login_enter_6_digit"
                            android:textColorHint="@color/rp_grey_4"
                            android:onTextChanged="@{(text,a,b,c) -> vm.updateOtp(text)}"
                            android:onFocusChange="@{(v, hasFocus) -> vm.onOtpFocusChanged(hasFocus)}"
                            app:textWithCursor="@{vm.otp}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/rp_size_4"
                        android:layout_marginBottom="@dimen/rp_size_4"
                        android:layout_marginStart="@dimen/rp_size_16"
                        android:layout_marginEnd="@dimen/rp_size_8"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center_vertical"
                            android:textAppearance="@style/rp_body_small"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="@{vm.resendMessageColor}"
                            android:text="@{vm.resendMessage}"
                            tools:text="Resend code in 29 Sec" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/rp_size_16"
                            android:visibility="@{vm.resendActionLayoutVisibility}" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="@style/rp_cta_small"
                                android:text="@{vm.resendTimeLeft}"
                                android:textColor="@color/rp_blue_2"
                                android:visibility="@{vm.resendButtonVisibility == View.VISIBLE ? View.GONE : View.VISIBLE }" />

                            <com.google.android.material.button.MaterialButton
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:minHeight="0dp"
                                android:minWidth="0dp"
                                android:includeFontPadding="false"
                                android:textAppearance="@style/rp_cta_small"
                                android:text="@string/rp_get_otp_code"
                                android:onClick="@{() -> vm.resendOtpClick()}"
                                android:visibility="@{vm.resendButtonVisibility}" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <LinearLayout
                android:background="@drawable/rp_shadow_flat"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:layout_marginBottom="@dimen/rp_size_16"
                    android:orientation="horizontal"
                    android:visibility="@{vm.mobileNumberVisibility == View.VISIBLE ? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:layout_width="@dimen/rp_size_40"
                        android:layout_height="@dimen/rp_size_40"
                        android:src="@drawable/rp_ic_sms_special"
                        app:tint="@color/rp_blue_2"
                        android:background="@drawable/rp_ic_circle"
                        android:backgroundTint="@color/rp_blue_5"/>

                    <TextView
                        android:textAppearance="@style/rp_body_regular"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/rp_size_8"
                        android:layout_marginEnd="@dimen/rp_size_8"
                        android:layout_gravity="center"
                        tools:text="Code sent to 917738679529"
                        android:text="@{vm.editMessage}" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/rp_size_6"
                        android:paddingEnd="@dimen/rp_size_6"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rp_background_card_cta_small"
                        android:onClick="@{() -> vm.editClick()}">

                        <ImageView
                            android:layout_width="@dimen/rp_size_12"
                            android:layout_height="@dimen/rp_size_12"
                            android:layout_marginBottom="@dimen/rp_size_6"
                            android:layout_marginTop="@dimen/rp_size_6"
                            android:layout_marginStart="@dimen/rp_size_6"
                            android:layout_marginEnd="@dimen/rp_size_4"
                            android:layout_gravity="center"
                            android:src="@drawable/rp_ic_edit"
                            app:tint="@color/rp_blue_2"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:includeFontPadding="false"
                            android:layout_marginEnd="@dimen/rp_size_6"
                            android:textAppearance="@style/rp_cta_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/rp_edit" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    style="@style/rp_cta_regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rp_size_56"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:layout_marginBottom="@dimen/rp_size_16"
                    android:includeFontPadding="false"
                    android:insetTop="@dimen/rp_size_0"
                    android:insetBottom="@dimen/rp_size_0"
                    android:text="@{vm.submitOrVerify}"
                    android:enabled="@{vm.submitOrVerifyEnable}"
                    android:onClick="@{() -> vm.submitOrVerifyOtpClick()}"
                    tools:text="Get OTP Code"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>
