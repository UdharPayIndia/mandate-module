<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.settlements.presentation.ui.detail.viewmodel.ItemSettledInstallmentListVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/rp_size_8"
        android:paddingStart="@dimen/rp_size_8"
        android:paddingEnd="@dimen/rp_size_8"
        android:paddingTop="@dimen/rp_size_12"
        android:paddingBottom="@dimen/rp_size_12"
        android:orientation="horizontal"
        android:background="@drawable/rp_background_card_item"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> vm.onItemClick()}">

        <LinearLayout
            android:id="@+id/lyt_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rp_size_16"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lyt_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:textAppearance="@style/rp_body_regular_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{vm.nameText}"
                tools:text="Rahulkumar" />

            <TextView
                android:textAppearance="@style/rp_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.dateText}"
                tools:text="1000 due in 13 days" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/rp_size_8"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintEnd_toStartOf="@+id/ivArrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:textAppearance="@style/rp_num_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.amountText}"
                    android:textColor="@{vm.amountTextColor}"
                    tools:textColor="@color/rp_green_2"
                    tools:text="â‚¹50,000" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/rp_size_2"
                    tools:tint="@color/rp_green_2"
                    android:tint="@{vm.amountTextColor}"
                    android:src="@{vm.amountIcon}"
                    tools:src="@drawable/rp_ic_success" />
            </LinearLayout>

            <TextView
                android:textAppearance="@style/rp_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.serialNumberText}"
                tools:text="1000 due in 13 days" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="@dimen/rp_size_4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/rp_ic_forward"
            app:tint="@color/rp_grey_4"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
