<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.mandate.presentation.ui.mandateadd.viewmodel.MandateAddUM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/rp_size_96"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_view">

            <LinearLayout
                android:id="@+id/scroll_view_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/rp_size_4"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <include
                    android:id="@+id/lytCustomerDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:vm="@{vm}"
                    layout="@layout/item_add_customer_details_rp"/>

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:vm="@{vm}"
                    layout="@layout/item_add_collection_details_rp"/>

                <include
                    app:vm="@{vm}"
                    layout="@layout/item_add_nach_details_rp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rp_size_16"
                    android:layout_marginBottom="@dimen/rp_size_8"
                    android:visibility="@{vm.couponVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginHorizontal="@dimen/rp_size_8"
                    android:textAppearance="@style/rp_title"
                    android:text="@string/rp_discount_coupons" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:visibility="@{vm.couponVisibility ? View.VISIBLE : View.GONE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_coupon_rp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/button_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            tools:visibility="gone"
            android:background="@color/rp_grey_6"
            app:layout_constraintTop_toBottomOf="@+id/scroll_view"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rp_green_2"
                android:paddingVertical="@dimen/rp_size_4"
                android:visibility="@{!TextUtils.isEmpty(vm.subscriptionInfoText) ? View.VISIBLE : View.GONE}"
                android:paddingHorizontal="@dimen/rp_size_16">

                    <TextView
                    android:id="@+id/tvStatus"
                    android:textAppearance="@style/rp_body_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_gravity="center"
                    android:drawablePadding="@dimen/rp_size_8"
                    app:textWithNullCheck="@{vm.subscriptionInfoText}"
                    android:textColor="@color/rp_grey_6"
                    tools:text="@string/rp_charges_are_applicable_on_successfully_collected_installments"
                    app:drawableStartCompat="@drawable/rp_ic_sale_outline"
                    app:drawableTint="@color/rp_grey_6" />
            </FrameLayout>

            <include
                app:vm="@{vm}"
                layout="@layout/item_mandate_charges_rp"/>

            <LinearLayout
                style="@style/rp_bottom_sheet"
                android:backgroundTint="@color/rp_blue_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/rp_size_8"
                android:gravity="center"
                android:visibility="@{vm.oldChargeVisibility}">

                  <TextView
                    android:textAppearance="@style/rp_body_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.charges}"
                    android:textColor="@color/rp_blue_2"
                    tools:text="@string/rp_service_charge_detail_amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rp_size_4"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:text="@string/rp_limited_time_offer"
                    android:paddingStart="@dimen/rp_size_4"
                    android:paddingEnd="@dimen/rp_size_4"
                    android:paddingTop="@dimen/rp_size_2"
                    android:paddingBottom="@dimen/rp_size_2"
                    android:background="@drawable/rp_background_card_2"
                    android:backgroundTint="@color/rp_blue_1"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    android:textColor="@color/rp_grey_6"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/rp_size_48"
                android:layout_marginStart="@dimen/rp_size_16"
                android:layout_marginTop="@dimen/rp_size_16"
                android:layout_marginEnd="@dimen/rp_size_16"
                android:layout_marginBottom="@dimen/rp_size_16"
                android:includeFontPadding="false"
                android:insetTop="@dimen/rp_size_0"
                android:enabled="@{vm.generatePaymentButtonEnabled}"
                android:insetBottom="@dimen/rp_size_0"
                android:onClick="@{() -> vm.onGeneratePaymentLinkClick()}"
                android:text="@{vm.generatePaymentLinkText}"
                tools:text="@string/rp_generate_payment_link"
                android:textAppearance="@style/rp_cta_regular" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
