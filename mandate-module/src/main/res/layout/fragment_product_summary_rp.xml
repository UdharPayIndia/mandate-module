<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.product.presentation.ui.summary.viewmodel.ProductSummaryUM" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rp_size_12"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/rp_size_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:id="@+id/tv_balance_keys_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/rp_size_2"
                        android:layout_marginStart="@dimen/rp_size_16"
                        android:layout_marginTop="@dimen/rp_size_16"
                        android:gravity="start"
                        android:text="@{vm.balanceLabelText}"
                        android:textAppearance="@style/rp_body_small"
                        android:textColor="@{vm.balanceLabelTextColor}"
                        app:layout_constraintBottom_toTopOf="@+id/tv_balance_keys_value"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/balance_key" />

                    <TextView
                        android:id="@+id/tv_balance_keys_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/rp_size_2"
                        android:layout_marginStart="@dimen/rp_size_16"
                        android:layout_marginBottom="@dimen/rp_size_16"
                        android:gravity="start"
                        android:text="@{vm.balanceKeysText}"
                        android:textAppearance="@style/rp_title"
                        android:textColor="@{vm.balanceTextColor}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_balance_keys_label"
                        tools:text="23" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.33" />

                    <ImageView
                        android:id="@+id/iv_history"
                        android:layout_width="@dimen/rp_size_48"
                        android:layout_height="@dimen/rp_size_32"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/rp_size_16"
                        android:background="@drawable/rp_background_card_24_border"
                        android:elevation="@dimen/rp_size_0"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:onClick="@{() -> vm.onHistoryClick()}"
                        android:padding="@dimen/rp_size_8"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        android:src="@drawable/rp_ic_history_with_arrow"
                        android:visibility="@{vm.historyButtonVisibility ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline_1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/rp_grey_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/rp_size_48"
            android:background="@color/rp_blue_2" />
    </FrameLayout>
</layout>