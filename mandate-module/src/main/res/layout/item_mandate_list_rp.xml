<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.mandate.presentation.ui.mandatelist.viewmodel.ItemMandateListVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/rp_size_16"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/rp_grey_6"
        android:onClick="@{() -> vm.onItemClick()}">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@{vm.headerTitle}"
            android:url="@{vm.headerUrl}"
            tools:tint="@color/rp_green_2"
            tools:ignore="ContentDescription"
            tools:src="@drawable/rp_ic_profile_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/ic_dot"
            android:layout_width="@dimen/rp_size_16"
            android:layout_height="@dimen/rp_size_16"
            android:src="@drawable/rp_ic_circle_stroke"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="@{vm.isUnread() ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="@+id/iv_logo"
            app:layout_constraintTop_toTopOf="@+id/iv_logo"
            app:layout_constraintBottom_toBottomOf="@+id/iv_logo"/>

        <TextView
            android:textAppearance="@style/rp_new_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxLines="1"
            android:textSize="8sp"
            android:textColor="@color/rp_grey_6"
            android:text="@{vm.nofUpdateText}"
            android:visibility="@{vm.isUnread() ? View.VISIBLE : View.GONE}"
            tools:text="1"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/ic_dot"
            app:layout_constraintBottom_toBottomOf="@+id/ic_dot"
            app:layout_constraintStart_toStartOf="@+id/ic_dot"
            app:layout_constraintEnd_toEndOf="@+id/ic_dot"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rp_size_16"
            android:layout_marginEnd="@dimen/rp_size_16"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/iv_logo"
            app:layout_constraintEnd_toStartOf="@+id/lyt_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:textAppearance="@style/rp_body_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                app:isBold="@{vm.isUnread()}"
                android:maxLines="1"
                android:text="@{vm.bodyTitle}"
                tools:text="Rahulkumar" />

            <TextView
                android:layout_marginTop="@dimen/rp_size_2"
                android:textAppearance="@style/rp_body_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:isBold="@{vm.isUnread()}"
                android:text="@{vm.bodySubtitle}"
                tools:text="1000 due in 13 days" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:textAppearance="@style/rp_num_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.footerTitle}"
                tools:text="â‚¹50,000" />

            <TextView
                android:layout_marginTop="@dimen/rp_size_2"
                android:textAppearance="@style/rp_new_header"
                android:paddingStart="@dimen/rp_size_8"
                android:paddingEnd="@dimen/rp_size_8"
                android:paddingTop="@dimen/rp_size_2"
                android:paddingBottom="@dimen/rp_size_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.footerSubtitle}"
                android:textColor="@{vm.footerSubtitleColor}"
                android:background="@{vm.footerBackgroundDrawable}"
                android:gravity="center"
                tools:text="Finished"
                tools:background="@drawable/rp_background_card_2"
                tools:backgroundTint="@color/rp_green_6"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
