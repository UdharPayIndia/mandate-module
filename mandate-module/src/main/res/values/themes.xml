    <style name="rp_surface_1" parent="@style/Theme.AppCompat">
        <item name="android:background">@drawable/rp_background_card_4</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="rp_surface_1_top" parent="@style/Theme.AppCompat">
        <item name="android:background">@drawable/rp_background_card_4_top</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="rp_surface_1_bottom" parent="@style/Theme.AppCompat">
        <item name="android:background">@drawable/rp_background_card_4_bottom</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="rp_bottom_sheet" parent="@style/Theme.AppCompat">
        <item name="android:background">@drawable/rp_shadow_flat</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <style name="RpPopUpMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/rp_grey_2</item>
        <item name="popupMenuBackground">@color/rp_grey_6</item>
    </style>

    <style name="RpAdjustResizeBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RpBottomModalStyle</item>
        <item name="colorPrimary">@color/rp_blue_2</item>
        <item name="colorPrimaryDark">@color/rp_blue_1</item>
        <item name="colorAccent">@color/rp_blue_4</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RpHomeTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/rp_title</item>
        <item name="tabBackground">@color/rp_blue_2</item>
        <item name="tabTextColor">@color/rp_grey_6</item>
        <item name="tabIndicatorColor">@color/rp_grey_6</item>
        <item name="tabIndicatorHeight">@dimen/rp_size_6</item>
        <item name="tabIndicator">@color/rp_grey_6</item>
    </style>
</resources>
