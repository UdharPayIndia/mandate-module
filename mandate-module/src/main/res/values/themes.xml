        <item name="android:textColor">@color/rp_grey_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="lineSpacing">2sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="rp_body_regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rp_inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/rp_grey_1</item>
        <item name="android:textStyle">normal</item>
