    <style name="rp_body_small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rp_inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/rp_grey_3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="lineSpacing">1sp</item>
