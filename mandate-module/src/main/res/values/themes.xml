<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RpMainScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/rp_blue_2</item>
        <item name="colorPrimaryDark">@color/rp_blue_1</item>
        <item name="colorAccent">@color/rp_blue_4</item>
        <item name="colorPrimaryVariant">@color/rp_blue_1</item>
        <item name="colorSecondary">@color/rp_blue_4</item>
        <item name="colorSecondaryVariant">@color/rp_blue_5</item>

        <item name="bottomSheetDialogTheme">@style/RpBottomSheetTheme</item>
        <item name="android:textColorSecondary">@color/rp_grey_5</item>
        <item name="colorControlNormal">@color/rp_grey_6</item>
    </style>

    ////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////

    <style name="RpBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RpBottomModalStyle</item>
        <item name="colorPrimary">@color/rp_blue_4</item>
        <item name="colorPrimaryDark">@color/rp_blue_5</item>
        <item name="colorAccent">@color/rp_blue_4</item>
    </style>

    <style name="RpBottomModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rp_background_card_radius_top</item>
    </style>

    <style name="RpBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RpBottomSheetStyleWrapper</item>
    </style>

    <style name="RpBottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorAccent">@color/rp_blue_1</item>
    </style>

    <style name="RpMyCalendar" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/rp_blue_2</item>
    </style>

    <style name="RpMyProgressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/rp_blue_1</item>
    </style>

    <style name="RpMyTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/rp_text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/rp_text_input_layout_stroke_color</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
    </style>

    <style name="RpMyEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/rp_size_56</item>
        <item name="android:textAppearance">@style/rp_title</item>
    </style>

    <style name="RpMyCompactEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/rp_size_48</item>
        <item name="android:textAppearance">@style/rp_body_regular_medium</item>
        <item name="android:paddingTop">@dimen/rp_size_0</item>
        <item name="android:paddingBottom">@dimen/rp_size_0</item>
    </style>

    ////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////

    <style name="rp_heading" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rp_inter_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/rp_grey_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineSpacing">4sp</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="rp_big_heading" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rp_inter_semi_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/rp_grey_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineSpacing">4sp</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="rp_header" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rp_inter_semi_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/rp_grey_3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
        <item name="lineSpacing">4sp</item>
        <item name="lineHeight">16dp</item>
    </style>

    <style name="rp_title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rp_inter_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/rp_grey_1</item>
