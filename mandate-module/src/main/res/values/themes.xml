    <style name="rp_cta_small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rp_poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/rp_blue_2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.01</item>
