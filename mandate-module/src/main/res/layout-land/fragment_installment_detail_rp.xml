<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.rocketpay.mandate.feature.installment.presentation.ui.installmentdetail.viewmodel.InstallmentDetailUM"/>

        <import type="android.view.View"/>

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:background="@{vm.toolbarBackground}"
                    tools:background="@color/rp_blue_2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingStart="@dimen/rp_size_16"
                        android:paddingEnd="@dimen/rp_size_16"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:textAppearance="@style/rp_heading"
                            android:textColor="@color/rp_grey_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/rp_symbol_rupee"/>

                        <TextView
                            android:textAppearance="@style/rp_body_large_medium"
                            android:textSize="56sp"
                            android:textColor="@color/rp_grey_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@{vm.amount}"
                            tools:text="2,00,000"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/rp_size_12"
                            android:layout_marginTop="@dimen/rp_size_8"
                            android:orientation="vertical">

                            <TextView
                                android:includeFontPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/rp_header"
                                android:textColor="@color/rp_grey_5"
                                android:text="@string/rp_from"/>

                            <TextView
                                android:includeFontPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/rp_body_regular"
                                android:textColor="@color/rp_grey_6"
                                android:text="@{vm.fromParty}"
                                tools:text="Ishan Sharma"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/rp_surface_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/rp_size_8"
                        android:layout_marginEnd="@dimen/rp_size_8"
                        android:layout_marginBottom="@dimen/rp_size_4">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_installment_detail_rp"
                            tools:visibility="visible"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/rp_orange_2"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:paddingHorizontal="@dimen/rp_size_16"
                            android:paddingVertical="@dimen/rp_size_8"
                            android:drawablePadding="@dimen/rp_size_16"
                            android:onClick="@{() -> vm.onSettlementBannerClick()}"
                            android:clickable="@{vm.settlementBannerClickable}"
                            android:drawableEnd="@{vm.settlementBannerClickable ? @drawable/rp_ic_arrow_within_circle : null}"
                            app:textWithEmptyCheck="@{vm.settlementBannerMessage}"
                            android:textAppearance="@style/rp_body_regular"
                            android:textColor="@color/rp_grey_6"
                            tools:text="@string/rp_business_details" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/rp_grey_41"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="@{vm.settlementButtonVisibility ? View.VISIBLE : View.GONE}"
                            android:layout_marginTop="@dimen/rp_size_12"
                            android:layout_marginHorizontal="@dimen/rp_size_12"
                            android:layout_marginBottom="@dimen/rp_size_6"
                            android:background="@drawable/rp_background_card_cta"
                            android:onClick="@{() -> vm.onViewSettlementClick()}"
                            android:orientation="horizontal"
                            android:padding="@dimen/rp_size_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/rp_size_8"
                                android:includeFontPadding="false"
                                android:text="@string/rp_view_settlement_details"
                                android:textAppearance="@style/rp_cta_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/rp_size_6"
                            android:visibility="@{vm.retryVisibility || vm.skipVisibility ? View.VISIBLE : View.GONE}"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/rp_size_6"
                                android:background="@{vm.retryCtaBackground}"
                                tools:background="@drawable/rp_background_card_cta"
                                android:onClick="@{() -> vm.onRetryClick()}"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:clickable="@{vm.retryEnable}"
                                android:padding="@dimen/rp_size_8">

                                <ImageView
                                    android:layout_width="@dimen/rp_size_20"
                                    android:layout_height="@dimen/rp_size_20"
                                    android:layout_marginStart="@dimen/rp_size_8"
                                    android:src="@{vm.retryIcon}"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/rp_size_8"
                                    android:includeFontPadding="false"
                                    android:text="@string/rp_retry_installment"
                                    android:textAppearance="@style/rp_cta_small"
                                    android:textColor="@{vm.retryTextColor}" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/rp_size_6"
                                android:layout_weight="1"
                                android:background="@{vm.skipCtaBackground}"
                                tools:background="@drawable/rp_background_card_cta"
                                android:onClick="@{() -> vm.onSkipClick()}"
                                android:clickable="@{vm.skipEnable}"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/rp_size_8">

                                <ImageView
                                    android:layout_width="@dimen/rp_size_20"
                                    android:layout_height="@dimen/rp_size_20"
                                    android:layout_marginStart="@dimen/rp_size_8"
                                    android:src="@{vm.skipIcon}"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/rp_size_8"
                                    android:includeFontPadding="false"
                                    android:textAppearance="@style/rp_cta_small"
                                    android:textColor="@{vm.skipTextColor}"
                                    android:text="@string/rp_skip_installment" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/rp_size_6"
                            android:paddingBottom="@dimen/rp_size_6"
                            android:visibility="@{vm.penaltyVisibility || vm.markAsPaidVisibility? View.VISIBLE : View.GONE}">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/rp_size_6"
                                android:visibility="@{vm.penaltyVisibility ? View.VISIBLE : View.GONE}"
                                android:background="@{vm.penaltyCtaBackground}"
                                tools:background="@drawable/rp_background_card_cta"
                                android:onClick="@{() -> vm.onPenaltyClick()}"
                                android:clickable="@{vm.penaltyEnable}"
                                android:orientation="horizontal"
                                android:padding="@dimen/rp_size_8">

                                <ImageView
                                    android:layout_width="@dimen/rp_size_20"
                                    android:layout_height="@dimen/rp_size_20"
                                    android:layout_marginStart="@dimen/rp_size_8"
                                    android:src="@{vm.penaltyIcon}"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/rp_size_8"
                                    android:includeFontPadding="false"
                                    android:textAppearance="@style/rp_cta_small"
                                    android:textColor="@{vm.penaltyTextColor}"
                                    android:text="@string/rp_charge_penalty" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_margin="@dimen/rp_size_6"
                                android:visibility="@{vm.markAsPaidVisibility ? View.VISIBLE : View.GONE}"
                                android:background="@{vm.markAsPaidCtaBackground}"
                                tools:background="@drawable/rp_background_card_cta"
                                android:onClick="@{() -> vm.onMarkOnPaidClick()}"
                                android:clickable="@{vm.markAsPaidEnable}"
                                android:orientation="horizontal"
                                android:padding="@dimen/rp_size_8">

                                <ImageView
                                    android:layout_width="@dimen/rp_size_20"
                                    android:layout_height="@dimen/rp_size_20"
                                    android:src="@{vm.markAsPaidIcon}"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/rp_size_8"
                                    android:includeFontPadding="false"
                                    android:textAppearance="@style/rp_cta_small"
                                    android:textColor="@{vm.markAsPaidTextColor}"
                                    android:text="@string/rp_mark_as_paid" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                style="@style/rp_surface_1"
                android:layout_marginStart="@dimen/rp_size_8"
                android:layout_marginEnd="@dimen/rp_size_8"
                android:layout_marginTop="@dimen/rp_size_4"
                android:layout_marginBottom="@dimen/rp_size_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textAppearance="@style/rp_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rp_size_12"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:layout_marginBottom="@dimen/rp_size_16"
                    android:text="@string/rp_transaction_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:layout_marginBottom="@dimen/rp_size_12">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textAppearance="@style/rp_body_small"
                                android:textColor="@color/rp_grey_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="@{vm.installmentUtrLabel}"
                                tools:text="@string/rp_app_transaction_id"/>

                            <TextView
                                android:textAppearance="@style/rp_body_large"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:textWithNullCheck="@{vm.installmentUtr}"
                                tools:text="219894829802"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/rp_size_36"
                            android:layout_height="@dimen/rp_size_36"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rp_ic_copy"
                            app:tint="@color/rp_blue_2"
                            android:onClick="@{() -> vm.onRocketPayTransactionIdCopyClick()}"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/rp_size_16">

                        <TextView
                            android:textAppearance="@style/rp_body_small"
                            android:textColor="@color/rp_grey_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/rp_from"/>

                        <TextView
                            android:textAppearance="@style/rp_body_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:textWithNullCheck="@{vm.fromDetail}"
                            tools:text="Virat Sharma • SBI 2030XXXXXXX818"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/rp_size_16">

                        <TextView
                            android:textAppearance="@style/rp_body_small"
                            android:textColor="@color/rp_grey_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/rp_to"/>

                        <TextView
                            android:textAppearance="@style/rp_body_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:textWithNullCheck="@{vm.toDetail}"
                            tools:text="Ishan Sharma • ICICI 4059XXXXXXX129"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/rp_size_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textAppearance="@style/rp_body_small"
                                android:textColor="@color/rp_grey_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="@string/rp_transaction_id"/>

                            <TextView
                                android:textAppearance="@style/rp_body_large"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:textWithNullCheck="@{vm.utr}"
                                tools:text="219894829802"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/rp_size_36"
                            android:layout_height="@dimen/rp_size_36"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rp_ic_copy"
                            app:tint="@color/rp_blue_2"
                            android:onClick="@{() -> vm.onTransactionIdCopyClick()}"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility="@{vm.utrCopyVisibility}"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/rp_surface_1"
                android:layout_margin="@dimen/rp_size_8"
                android:paddingVertical="@dimen/rp_size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{vm.penaltyDetailVisibility ? View.VISIBLE : View.GONE}"
                android:orientation="vertical">

                <TextView
                    android:textAppearance="@style/rp_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:layout_marginBottom="@dimen/rp_size_16"
                    android:text="@string/rp_penalty_details" />

                <TextView
                    android:textAppearance="@style/rp_body_small"
                    android:textColor="@color/rp_grey_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:ellipsize="end"
                    android:text="@{vm.penaltyTitleText}"
                    tools:text="@string/rp_app_bounce_penalty_collected"/>

                <TextView
                    android:textAppearance="@style/rp_body_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    app:textWithNullCheck="@{vm.penaltyDetailText}"
                    tools:text="UPI (8877168861@oksbi)"/>

            </LinearLayout>

            <LinearLayout
                style="@style/rp_surface_1"
                android:layout_margin="@dimen/rp_size_8"
                android:paddingVertical="@dimen/rp_size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{vm.manualSummaryVisibility ? View.VISIBLE : View.GONE}"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:layout_marginBottom="@dimen/rp_size_16">

                    <TextView
                        android:textAppearance="@style/rp_header"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/rp_other_details" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/rp_size_6"
                        android:paddingEnd="@dimen/rp_size_6"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rp_background_card_cta_small"
                        android:onClick="@{() -> vm.onEditMarkAsPaidClick()}">

                        <ImageView
                            android:layout_width="@dimen/rp_size_12"
                            android:layout_height="@dimen/rp_size_12"
                            android:layout_marginBottom="@dimen/rp_size_6"
                            android:layout_marginTop="@dimen/rp_size_6"
                            android:layout_marginStart="@dimen/rp_size_6"
                            android:layout_marginEnd="@dimen/rp_size_4"
                            android:layout_gravity="center"
                            android:src="@drawable/rp_ic_edit"
                            app:tint="@color/rp_blue_2"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:includeFontPadding="false"
                            android:layout_marginEnd="@dimen/rp_size_6"
                            android:textAppearance="@style/rp_cta_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/rp_edit" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:textAppearance="@style/rp_body_small"
                    android:textColor="@color/rp_grey_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:ellipsize="end"
                    android:text="@string/rp_time"/>

                <TextView
                    android:textAppearance="@style/rp_body_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    app:textWithNullCheck="@{vm.time}"
                    tools:text="UPI (8877168861@oksbi)"/>

                <TextView
                    android:textAppearance="@style/rp_body_small"
                    android:textColor="@color/rp_grey_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/rp_size_16"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:ellipsize="end"
                    android:text="@string/rp_method"/>

                <TextView
                    android:textAppearance="@style/rp_body_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    app:textWithNullCheck="@{vm.mode}"
                    tools:text="UPI (8877168861@oksbi)"/>

                <TextView
                    android:textAppearance="@style/rp_body_small"
                    android:textColor="@color/rp_grey_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/rp_size_16"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    android:ellipsize="end"
                    android:text="@string/rp_comment"/>

                <TextView
                    android:textAppearance="@style/rp_body_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/rp_size_16"
                    android:layout_marginEnd="@dimen/rp_size_16"
                    app:textWithNullCheck="@{vm.comment}"
                    tools:text="UPI (8877168861@oksbi)"/>
            </LinearLayout>

            <LinearLayout
                style="@style/rp_surface_1"
                android:layout_marginStart="@dimen/rp_size_8"
                android:layout_marginEnd="@dimen/rp_size_8"
                android:layout_marginTop="@dimen/rp_size_4"
                android:layout_marginBottom="@dimen/rp_size_4"
                android:visibility="@{vm.refundMessageVisibility ? View.VISIBLE : View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/rp_size_12"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/rp_size_20"
                    android:layout_height="@dimen/rp_size_20"
                    app:tint="@color/rp_grey_3"
                    android:layout_marginTop="@dimen/rp_size_4"
                    android:src="@drawable/rp_ic_warning_round"/>

                <TextView
                    android:textAppearance="@style/rp_body_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rp_size_8"
                    android:text="@string/rp_refund_may_take_upto_seven_working_days_to_reflect" />

            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rp_size_8"
                layout="@layout/item_trust_power_by_rp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
