<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyFullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="MySplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_2</item>
        <item name="colorPrimaryDark">@color/blue_1</item>
        <item name="colorAccent">@color/blue_4</item>
        <item name="colorPrimaryVariant">@color/blue_1</item>
        <item name="colorSecondary">@color/blue_4</item>
        <item name="colorSecondaryVariant">@color/blue_5</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyMainScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_2</item>
        <item name="colorPrimaryDark">@color/blue_1</item>
        <item name="colorAccent">@color/blue_4</item>
        <item name="colorPrimaryVariant">@color/blue_1</item>
        <item name="colorSecondary">@color/blue_4</item>
        <item name="colorSecondaryVariant">@color/blue_5</item>

        <item name="android:textColorSecondary">@color/grey_5</item>
        <item name="colorControlNormal">@color/grey_6</item>
    </style>

    ////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////

</resources>
